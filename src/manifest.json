{
	"name": "Halo Notification Service",
	"description": "Receive notifications for new Halo actions",
	"manifest_version": 3,
	"host_permissions": ["*://halo.gcu.edu/"],
	"permissions": ["cookies", "identity", "storage"],
	"action": {
		"default_icon": {
			"48": "static/icon.png"
		},
		"default_popup": "popup/popup.html"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"icons": {
		"16": "static/icon.png",
		"32": "static/icon.png",
		"48": "static/icon.png",
		"128": "static/icon.png"
	}
}
